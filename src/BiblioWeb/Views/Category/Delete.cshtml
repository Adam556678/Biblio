@model Category

<form method="post">
    <div class="border border-dark p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label for="name">Edit Categroy</label>
            <input asp-for="Name" type="text" id="name" disabled class="form-control">
        </div>
        <div class="mb-3">
            <label for="order">Display Order</label>
            <input asp-for="DisplayOrder"
       type="number"
       min="1"
       max="100"
       disabled
       class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">                
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to list</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}